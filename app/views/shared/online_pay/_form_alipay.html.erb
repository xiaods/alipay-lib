<% payment_service_for(code, Alipay::ACCOUNT,
  :amount => amount, :currency => '1', :service => :alipay, :html => { :id => 'pay_form_1', :method => 'get' }) do |service| -%>
    <% service.charset 'utf-8' %>
    <% service.description code%>
    <% service.return_url url_for(:only_path => false, :action => "online_pay_result", :id => "alipay") %>
    <% service.notify_url url_for(:only_path => false, :action => "notify_result", :id => "alipay") %>
    <% service.seller :email => Alipay::PAY_EMAIL %>
    <% service.payment_type 1 %>
    <% service.service "create_direct_pay_by_user" %>
    <% service.subject code %>
    <% service.show_url url_for(:only_path => false, :action => "index") %>
    <% service.sign %>
    <%= content if local_assigns.include? :content   %>
<% end -%>